<div class="box">

  <div class="inner-box">
    <h2>Burgers ready to eat</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-devour}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="inner-box">
    <h2>Eaten burgers</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-devour}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger">
  </div>

  <div class="form-group">
    <label for="toGo">Are you eating it here or picking it up?</label><br>
    <input type="radio" name="toGo" value="1">Pick it up<br>
    <input type="radio" name="toGo" value="0" checked> Eat here
  </div>

  <button type="submit">Add Burger</button>
</form>