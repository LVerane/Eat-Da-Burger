<h1>Burgers!</h1>

<div class="box">

  <div>
    <h2>Burgers that are not devoured (yet)!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-devour devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div>
    <h2>Burgers that are devoured (for now)!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-devour devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured!<br>
    <input type="radio" name="devoured" value="0" checked> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>